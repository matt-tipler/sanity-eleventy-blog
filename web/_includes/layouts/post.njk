---
layout: layouts/base.njk
templateClass: tmpl-post
---
<article>
  <h1>{{ post.title }}</h1>
  <!-- Using the new tag -->
  {# <img src="{%  imageUrlFor imageObject, 900  %}" alt="{{ post.mainImage.alt }}"> #}
  <img src="{%  imageUrlFor post.mainImage, 900  %}" alt="{{ post.mainImage.alt }}">
  
  {# <img src="{% croppedUrlFor post.mainImage, 600, 600 %}" alt="{{ post.mainImage.alt }}"> #}

  <p>Written by {% for author in post.authors %}<a href="/authors/{{ author.slug.current | slug }}/"> {{author.name}} </a>{% endfor %}  </p>
  {{ post.body | markdownify | safe }}
  <p><a href="{{ '/' | url }}">‚Üê Home</a></p>
</article>